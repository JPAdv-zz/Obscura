<!DOCTYPE html>
<html>
	<head>
  		<title>
  			<%= full_title(yield(:title)) %>
  		</title>
  		<%= stylesheet_link_tag    "application", :media => "all" %>	
  		<%= javascript_include_tag "application" %>	
  		<%= csrf_meta_tags %>
  		<%= render 'layouts/shin' %>
	</head>
	
	<!-- The main body of the website -->
	<body>
		<!-- Create the header, container, and footer -->
		<%= render 'layouts/header' %>
		<div class='container'>
			<div class='box'>
				<div class="main">
					<%= yield %>
				</div>
			</div>
			<%= render 'layouts/footer' %>
		</div>
	</body>
</html>
